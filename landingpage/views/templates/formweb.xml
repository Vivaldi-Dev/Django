<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="formweb" name="formWeb">

        <style>

            @font-face {
            font-family: 'Azonix';
            src: url(/landingpage/static/src/Fonts/Azonix.otf);
            }

            @font-face {
            font-family: 'Azonix';
            src: url(/landingpage/static/src/Fonts/Montserrat-VariableFont_wght.ttf);
            }

            .customcolor {
            background: #D9D9D9;
            }

            .custominput {
            background: #E9E9E9;
            border-radius: 60px;
            }

            .customarea {
            background: #E9E9E9;
            border-radius: 60px 60px 60px 47px;
            }

            .buttonSpan {
            font-family: 'Montserrat';
            font-style: normal;
            font-weight: 600;
            font-size: 20px;
            line-height: 24px;
            text-transform: capitalize;
            color: #FFFFFF;
            }

            .customtext {
            font-family: 'Azonix';
            font-style: normal;
            font-weight: 400;
            font-size: 52px;
            line-height: 52px;
            }

            .customtext span {
            background: linear-gradient(269.27deg, #749D08 -0.17%, #006738 110.65%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-fill-color: transparent;
            }

            .customlabel {
            font-family: 'Montserrat';
            font-style: normal;
            font-weight: 600;
            font-size: 16px;
            line-height: 20px;
            text-transform: capitalize;
            color: #000000;
            }

            .custommargin {
            margin-right: 50px;
            }

            .custombutton {
            border: none;
            border-radius: 20px;
            padding: 5px 40px;
            border: 5px solid #C3C2C2;
            border-radius: 65px;
            }

            .custombutton1 {
            border: none;
            border-radius: 20px;
            padding: 5px 40px;
            border: 5px solid #749C07;
            background: linear-gradient(269.27deg, #749D08 -0.17%, #006738 110.65%);
            border-radius: 65px;

            }

            @media only screen and (max-width: 1200px) {
            .desapir {
            width: 100px;
            }
            }

            @media only screen and (max-width: 768px) {
            .desapir {
            display: none;
            }
            }

            @media only screen and (max-width: 992px) {
            .customimage {
            display: none;
            }
            }

            @media only screen and (max-width: 640px) {
            .customimage {
            display: none;
            }
            }
        </style>

        <section class="webform">
            <div class="container-fluid customcolor">

                <div class="container ">

                    <div class="row">

                        <div class="col-md-6 d-flex  w-100 vh-100 gap-5 align-items-center justify-content-center vh-100">
                            <div class="customimage">
                                <div class=" d-flex align-items-center justify-content-center">
                                    <img class="responsive"
                                         src="/landingpage/static/src/img/HOMEMAOTELEFONE.png"
                                         alt=""></img>
                                </div>
                            </div>
                            <div>
                                <h1 class="customtext mb-5">
                                    <span>Fale connosco</span>
                                </h1>
                                <form method="POST" action="/formuweb/submit/" class="row g-3 mb-3">

                                    <div class="col-md-6">
                                        <label class="form-label customlabel m-2 " for="">Nome</label>
                                        <input type="text" name="nome" class="form-control custominput p-3"
                                               placeholder="Nome"></input>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label customlabel m-2" for="">Apelido</label>
                                        <input type="text" name="apelido" class="form-control custominput p-3"
                                               placeholder="Apelido"></input>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label customlabel m-2" for="">email</label>
                                        <input type="email" name="email" class="form-control custominput p-3"
                                               placeholder="Exemplo@gmail.com"></input>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label customlabel m-2" for="">Numero de Telefone</label>
                                        <input type="text" name="numero_celular" class="form-control custominput p-3"
                                               placeholder="(+258)"></input>
                                    </div>

                                    <div class="col-md-12">
                                        <label class="form-label customlabel m-2" for="">Numero de Telefone</label>
                                        <textarea class="form-control customarea" name="mensagem" id="" cols="30"
                                                  rows="8"></textarea>
                                    </div>

                                    <div class=" justify-content-between align-items-center  float-end custommargin">
                                        <button class="custombutton buttonSpan">
                                            <a class="text-white" href="/">Voltar</a>
                                        </button>
                                        <button type="submit" class="custombutton1 buttonSpan">Submit</button>

                                    </div>
                                </form>


                            </div>

                        </div>


                    </div>
                </div>
            </div>

        </section>
    </template>


</odoo>
